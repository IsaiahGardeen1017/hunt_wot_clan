{
    "nodeModulesDir": "manual",
    "tasks": {
        "check": "deno fmt --check . && deno lint . && deno check",
        "dev": "vite",
        "build": "vite build",
        "start": "deno serve -A _fresh/server.js",
        "update": "deno run -A -r jsr:@fresh/update .",
        "bldsrc": "deno run -A --env-file src/build/index.ts",
        "test": "deno run -A --env-file src/build/index.ts && deno run -A src/test.ts",
        "stgg": "deno run -A src/build/stgg.ts"
    },
    "fmt": {
        "options": {
            "useTabs": true,
            "singleQuote": true,
            "proseWrap": "never",
            "lineWidth": 135
        }
    },
    "lint": {
        "rules": {
            "tags": [
                "fresh",
                "recommended"
            ]
        }
    },
    "exclude": [
        "**/_fresh/*"
    ],
    "imports": {
        "@/": "./",
        "fresh": "jsr:@fresh/core@^2.2.0",
        "preact": "npm:preact@^10.27.2",
        "@preact/signals": "npm:@preact/signals@^2.5.0",
        "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
        "vite": "npm:vite@^7.1.3",
        "tailwindcss": "npm:tailwindcss@^4.1.10",
        "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
        "puppeteer": "npm:puppeteer"
    },
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.asynciterable",
            "dom.iterable",
            "deno.ns"
        ],
        "jsx": "precompile",
        "jsxImportSource": "preact",
        "jsxPrecompileSkipElements": [
            "a",
            "img",
            "source",
            "body",
            "html",
            "head",
            "title",
            "meta",
            "script",
            "link",
            "style",
            "base",
            "noscript",
            "template"
        ],
        "types": [
            "vite/client"
        ]
    }
}